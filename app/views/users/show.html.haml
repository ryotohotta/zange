#contents
  #my-timeline
    .my-timeline-header.table
      - if logged_in?
        %ul.table-cell.middle
          %li.media-theme.float-left
            =link_to 'みんなのzangeとchigiri', articles_path
          %li.media-theme.float-left
            #{current_user.name} のzangeとchigiri
          - if current_user.id == @user.id
            .float-right
              = link_to new_article_path do
                .red-btn
                  .media-new-zange.center
                    New Zange
        .clear

    .my-timeline-items
      = div_for @user.articles, class: "my-timeline-item" do |article|
        .media.table
          .media-name.center
            = link_to article.user.name, user_path(article.user)
          .media-body.middle
            .media-body-zange
              .media-category
                Zange
              %p= article.title
            .media-body-chigiri
              .media-category
                Chigiri
              %p= article.solution
          .media-bottom
            .media-next.center
              =link_to '続きを読む', article
            .red-btn.float-left
              - if current_user.id == @user.id
                .media-done
                  今日はできた！
              - else
                .media-cheer
                  応援する！
            .media-nums.float-right
              %i.fa.fa-bullhorn.float-left
                0
              %i.fa.fa-check-square.float-left
                0
          .clear

= link_to 'Edit', edit_user_path(@user)
\|
= link_to 'Back', users_path
