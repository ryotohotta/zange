#contents
  #my-timeline
    .my-timeline-header.table
      - if logged_in?
        %ul.table-cell.middle
          %li.media-theme.float-left
            =link_to 'みんなのzangeとchigiri', articles_path
          %li.media-theme.float-left
            #{current_user.name} のzangeとchigiri
          - if current_user.id == @user.id
            .float-right
              = link_to new_article_path do
                .red-btn
                  .media-new-zange.center
                    New Zange
        .clear

    .my-timeline-items
      = div_for @user.articles, class: "my-timeline-item" do |article|
        .media.table
          .media-name.center
            = link_to article.user.name, user_path(article.user)
          .media-body.middle
            .media-body-zange
              .media-category
                Zange
              %p= article.title
            .media-body-chigiri
              .media-category
                Chigiri
              %p= article.solution
          .media-bottom
            .media-next.center
              =link_to '続きを読む', article
            - if current_user.id == @user.id
              =link_to article_completions_path(article), method: :post do
                .red-btn.float-left
                  .media-done
                    %i.fa.fa-check-square
                      できた！
            - else
              =link_to article_cheers_path(article), method: :post do
                .red-btn.float-left
                  .media-cheer
                    %i.fa.fa-bullhorn
                      応援する!
            .media-nums.float-right
              %i.fa.fa-bullhorn.float-left
                = article.cheers.length
              %i.fa.fa-check-square.float-left
                = article.completions.length
          .clear

= link_to 'Edit', edit_user_path(@user)
\|
= link_to 'Back', users_path
