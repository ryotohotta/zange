#contents
  
  #timeline
    .timeline-header.table
      - if logged_in?
        %ul.table-cell.middle
          %li.media-theme.float-left
            みんなのzangeとchigiri
          %li.media-theme.float-left
            =link_to "#{current_user.name}のzangeとchigiri", current_user
        .clear
    .timeline-items
      = div_for @articles, class: "timeline-item" do |article|
        .media.table
          .media-name.center
            = link_to article.user.name, user_path(article.user)
          .media-body.middle
            .media-body-zange
              .media-category
                Zange
              %p= article.title
            .media-body-chigiri
              .media-category
                Chigiri
              %p= article.solution
          .media-bottom
            .media-next.center
              =link_to '続きを読む', article
            .red-btn.float-left
              .media-cheer
                - if article.cheered_by? current_user
                  = link_to "応援した", article_cheers_path, method: :delete
                - else
                  = link_to "応援する！", article_cheers_path, method: :post
            .media-nums.float-right
              %i.fa.fa-bullhorn.float-left
                0
              %i.fa.fa-check-square.float-left
                0
          .clear




    