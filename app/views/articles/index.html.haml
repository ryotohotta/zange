#contents
  #my-timeline
    .my-timeline-header.table
      - if logged_in?
        %ul.table-cell.middle
          .float-left
            %li.media-theme
              #{current_user.name} のzangeとchigiri
          .float-right
            = link_to new_article_path do
              .red-btn
                %li.media-new-zange.center
                  New Zange
          .clear

    .my-timeline-items
      - @articles.each do |article|
        .my-timeline-item
          .media.table
            .media-name.center
              = current_user.name
            .media-body.middle
              .media-body-zange
                .media-category
                  Zange
                %p= article.title
              .media-body-chigiri
                .media-category
                  Chigiri
                %p= article.solution
            .media-bottom
              .media-next.center
                =link_to '続きを読む', article
              .red-btn.float-left
                .media-done
                  今日はできた！
              .media-nums.float-right
                %i.fa.fa-bullhorn.float-left
                  0
                %i.fa.fa-check-square.float-left
                  0
            .clear





      