#contents
  
  #timeline
    .timeline-header.table
      - if logged_in?
        %ul.table-cell.middle
          %li.media-theme.float-left
            みんなのZangeとChigiri
          %li.media-theme.float-left
            =link_to "#{current_user.name}のZangeとChigiri", current_user
          .float-right
            = link_to new_article_path do
              .red-btn
                .media-new-zange.center
                  New Zange
        .clear
    .timeline-items
      = div_for @articles, class: "timeline-item" do |article|
        .media.table
          .media-name.center
            = link_to article.user.name, user_path(article.user)
          .media-body.middle
            .media-body-zange
              .media-category
                =image_tag("sorry.png")
                Zange
              %p= article.title
            .media-body-chigiri
              .media-category
                =image_tag("promise.png")
                Chigiri
              %p= article.solution
          .media-bottom
            .media-next.center
              =link_to '続きを読む', article
            =link_to article_cheers_path(article), method: :post do
              .red-btn.float-left
                .media-cheer
                  %i.fa.fa-bullhorn
                    応援する!
            .media-nums.float-right
              %i.fa.fa-bullhorn.float-left
                = article.cheers.length
              %i.fa.fa-check-square.float-left
                = article.completions.length
          .clear




    