= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :solution
    = f.text_field :solution
  .field
    = f.label :deadline
    = f.datetime_select :deadline
  .actions
    = f.submit 'Save'
