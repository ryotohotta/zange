%nav#header
	%ul.content
		.float-left
			%li.header-left
				- if logged_in?
					= link_to 'Zange', current_user, class: "header-brand"
				- else
					= link_to 'Zange', root_url, class: "header-brand"
		.float-right
			%li.header-right
				- if logged_in?
					%ul.menu
						%li= link_to "mypage", current_user
						%li= link_to "設定", edit_user_path(current_user)
						%li= link_to "ログアウト", sessions_path, method: :delete
				- else
					.registration= link_to "無料登録", root_url
					.signup= link_to "ログイン", new_sessions_path
			.clear