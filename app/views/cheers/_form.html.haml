= form_for @cheer do |f|
  - if @cheer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cheer.errors.count, "error")} prohibited this cheer from being saved:"
      %ul
        - @cheer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :article_id
    = f.number_field :article_id
  .actions
    = f.submit 'Save'
